{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "airbnb",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "import"
  ],
  "rules": {
    "no-unused-vars": 1,
    "comma-dangle": 1,
    "import/newline-after-import": 1,
    "no-use-before-define": 1,
    "linebreak-style": 0,
    "no-underscore-dangle": 0,
    "no-console": [
      "warn",
      {
        "allow": [
          "error"
        ]
      }
    ],
    "quotes": ["error", "single"],
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2,
        "singleQuote": true,
        "semi": true,
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "printWidth": 120
      },
      {
        "usePrettierrc": false
      }
    ]
  }
}
